page { background: #f6f7fb; }

.auth-mask {
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	background: rgba(15, 20, 31, 0.5);
	z-index: 99;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 32rpx;
	box-sizing: border-box;
}

.auth-dialog {
	width: 100%;
	max-width: 660rpx;
	background: #fff;
	border-radius: 20rpx;
	overflow: hidden;
	border: 1rpx solid #e5e6eb;
	max-height: 82vh;
	display: flex;
	flex-direction: column;
}

.auth-head {
	padding: 30rpx 28rpx 18rpx;
	background: #f7f9fd;
}

.auth-title {
	font-size: 36rpx;
	font-weight: 600;
	color: #1f2329;
}

.auth-subtitle {
	margin-top: 10rpx;
	font-size: 24rpx;
	line-height: 1.6;
	color: #646a73;
}

.auth-body {
	padding: 24rpx 28rpx 8rpx;
	flex: 1;
}

.auth-label {
	font-size: 24rpx;
	color: #646a73;
	margin-bottom: 12rpx;
}

.auth-input {
	width: 100%;
	height: 82rpx;
	border: 1rpx solid #d0d3db;
	border-radius: 12rpx;
	padding: 0 18rpx;
	box-sizing: border-box;
	font-size: 28rpx;
}

.auth-error {
	margin-top: 12rpx;
	color: #d93026;
	font-size: 24rpx;
}

.auth-foot {
	padding: 12rpx 28rpx 24rpx;
	border-top: 1rpx solid #eef0f4;
	background: #fff;
}

.auth-btn {
	margin-top: 4rpx;
	width: 100%;
	height: 84rpx;
	line-height: 84rpx;
	font-size: 30rpx;
	font-weight: 600;
	background: #4e83ff !important;
	color: #fff !important;
	border: none !important;
}

.auth-tip {
	text-align: center;
	color: #8f959e;
	font-size: 23rpx;
	margin-top: 14rpx;
}
