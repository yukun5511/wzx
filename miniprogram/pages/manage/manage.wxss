page { background: #f5f7fa; }

.section-head {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 10rpx;
}

.status-badge {
	font-size: 22rpx;
	color: #1677ff;
	background: #e8f3ff;
	border: 1rpx solid #cfe4ff;
	border-radius: 8rpx;
	padding: 4rpx 10rpx;
}

.table-count {
	font-size: 24rpx;
	color: #667085;
}

.action-group {
	margin-top: 4rpx;
}

.table {
	margin-top: 10rpx;
	border: 1rpx solid #dfe3e8;
	border-radius: 10rpx;
	overflow: hidden;
}

.table-head,
.table-row {
	display: flex;
	align-items: flex-start;
	padding: 14rpx 16rpx;
}

.table-head {
	background: #f8fafc;
	border-bottom: 1rpx solid #e7ebf0;
}

.table-row {
	border-bottom: 1rpx solid #edf1f4;
}

.table-row:last-child {
	border-bottom: none;
}

.col {
	font-size: 24rpx;
	color: #1f2937;
	padding-right: 10rpx;
	word-break: break-all;
}

.table-head .col {
	color: #667085;
	font-weight: 500;
}

.applicant { width: 26%; }
.phone { width: 18%; }
.time { width: 18%; }
.reason { width: 20%; }
.ops {
	width: 18%;
	display: flex;
	flex-direction: column;
	gap: 8rpx;
}

.mini-btn {
	margin: 0;
	height: 54rpx;
	line-height: 54rpx;
	font-size: 22rpx;
}
