:root {
  --fs-bg: #f5f7fa;
  --fs-surface: #ffffff;
  --fs-text: #1f2937;
  --fs-subtext: #667085;
  --fs-primary: #1677ff;
  --fs-primary-weak: #e8f3ff;
  --fs-border: #dfe3e8;
  --fs-success: #16a34a;
  --fs-shadow: 0 4rpx 20rpx rgba(15, 23, 42, 0.06);
}

page {
  background: var(--fs-bg);
  color: var(--fs-text);
  font-size: 28rpx;
}

.container {
  padding: 24rpx;
}

.hero {
  background: var(--fs-surface);
  border-radius: 14rpx;
  padding: 26rpx;
  color: var(--fs-text);
  border: 1rpx solid var(--fs-border);
  box-shadow: var(--fs-shadow);
  border-left: 8rpx solid var(--fs-primary);
  margin-bottom: 20rpx;
}

.hero-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  color: var(--fs-text);
}

.hero-desc {
  font-size: 24rpx;
  color: var(--fs-subtext);
  line-height: 1.6;
}

.card {
  background: var(--fs-surface);
  border-radius: 14rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid var(--fs-border);
  box-sizing: border-box;
  box-shadow: var(--fs-shadow);
}

.card-pressable {
  transition: all 0.2s;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: var(--fs-text);
}

.sub-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--fs-text);
  margin-bottom: 8rpx;
}

.desc {
  font-size: 24rpx;
  line-height: 1.6;
  color: var(--fs-subtext);
}

.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background: var(--fs-primary-weak);
  color: var(--fs-primary);
  font-size: 22rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid #cfe4ff;
}

.btn-primary {
  margin-top: 24rpx;
  background: var(--fs-primary);
  color: #fff;
  border-radius: 10rpx;
  border: none;
  font-size: 28rpx;
  height: 82rpx;
  line-height: 82rpx;
  font-weight: 500;
}

button {
  border-radius: 10rpx;
  border: 1rpx solid var(--fs-border);
  background: #fff;
  color: var(--fs-text);
  height: 76rpx;
  line-height: 76rpx;
}

input,
textarea {
  width: 100%;
  min-height: 72rpx;
  border: 1rpx solid var(--fs-border);
  border-radius: 12rpx;
  box-sizing: border-box;
  padding: 16rpx 18rpx;
  font-size: 26rpx;
  background: #fff;
}

textarea {
  min-height: 160rpx;
}

.row {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
  gap: 12rpx;
}

.label {
  width: 190rpx;
  color: var(--fs-subtext);
  font-size: 26rpx;
}

.value {
  flex: 1;
  color: var(--fs-text);
  min-height: 72rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid var(--fs-border);
  border-radius: 12rpx;
  padding: 0 18rpx;
  box-sizing: border-box;
  background: #fff;
}

.list-item {
  border-top: 1rpx solid var(--fs-border);
  padding: 16rpx 0;
}

.list-item:first-child {
  border-top: none;
  padding-top: 6rpx;
}

.meta {
  font-size: 24rpx;
  color: var(--fs-subtext);
  margin-top: 8rpx;
}

.meta-primary {
  color: var(--fs-primary);
}

.meta-success {
  color: var(--fs-success);
}

.mt-12 {
  margin-top: 12rpx;
}

.between {
  justify-content: space-between;
}

.mb-0 {
  margin-bottom: 0;
}

.role-switch-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.role-switch-trigger {
  background: var(--fs-primary-weak);
  color: var(--fs-primary);
  border: 1rpx solid #cfe4ff;
  border-radius: 8rpx;
  padding: 8rpx 18rpx;
  font-size: 24rpx;
}

.hero-note {
  margin-top: 10rpx;
  color: var(--fs-subtext);
}
